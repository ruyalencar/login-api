{
  "compilerOptions": {
    "target": "ES2021",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "strict": true,
  },
  "include": ["src"]
}